<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quiz.QuizMateriEmpatFragment">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pertanyaan4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:justificationMode="inter_word"
                        android:padding="5dp"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Chronometer
                        android:id="@+id/timer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/soalImage4"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gambarA"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="A"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageA"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="5"
                        android:src="@drawable/a" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gambarB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="B"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageB"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="5"
                        android:src="@drawable/b" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gambarC"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="C"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageC"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="5"
                        android:src="@drawable/c" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gambarD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="D"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageD"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="5"
                        android:src="@drawable/d" />

                </LinearLayout>
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/button1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white"
                    android:padding="5dp"
                    android:text="Button"

                    android:textAlignment="textStart" />



                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/button2_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white"
                    android:padding="5dp"
                    android:text="Button"
                    android:textAlignment="textStart" />

                <Button
                    android:id="@+id/button3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white"
                    android:padding="5dp"
                    android:text="Button"
                    android:textAlignment="textStart" />

                <Button
                    android:id="@+id/button4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white"
                    android:padding="5dp"
                    android:text="Button"
                    android:textAlignment="textStart" >
                </Button>



            </LinearLayout>

            <Button
                android:id="@+id/submit_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_bg"
                android:text="Next" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>