<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.materi.GalleryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/alatmasak" />

                    <TextView
                        android:id="@+id/materisatu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottomborder"
                        android:padding="10dp"
                        android:text="Materi 1"
                        android:textAlignment="center" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:background="@drawable/bottomborder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/potongan" />

                    <TextView
                        android:id="@+id/materidua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottomborder"

                        android:padding="10dp"
                        android:text="Materi 2"
                        android:textAlignment="center" />
                    <Spinner
                        android:id="@+id/spinner2"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/bottomborder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cooking" />

                    <TextView
                        android:id="@+id/materitiga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottomborder"

                        android:padding="10dp"
                        android:text="Materi 3"
                        android:textAlignment="center" />
                    <Spinner
                        android:id="@+id/spinner3"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/bottomborder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bumbu" />

                    <TextView
                        android:id="@+id/materiempat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottomborder"

                        android:padding="10dp"
                        android:text="Materi 4"
                        android:textAlignment="center"
                        />
                    <Spinner
                        android:id="@+id/spinner4"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/bottomborder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:id="@+id/spinner5"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/bottomborder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>